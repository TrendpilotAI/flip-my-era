import { LucideIcon } from "lucide-react";
import { cn } from "@/lib/utils";

interface IconProps {
  icon: LucideIcon;
  className?: string;
  size?: number;
}

export const Icon = ({ icon: Icon, className, size = 24 }: IconProps) => {
  return (
    <Icon 
      className={cn("text-gray-700", className)} 
      size={size} 
    />
  );
}; 